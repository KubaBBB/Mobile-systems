<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="83dp"
        android:text="Latitude:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:text="Longtitude:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latTextView" />

    <TextView
        android:id="@+id/latShowTextView"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="83dp"
        app:layout_constraintStart_toEndOf="@+id/latTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longShowTextView"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="124dp"
        app:layout_constraintStart_toEndOf="@+id/longTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showOnMapButton"
        android:layout_width="243dp"
        android:layout_height="57dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:text="Show On Map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longTextView" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="229dp"
        android:layout_height="251dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showOnMapButton" />

</androidx.constraintlayout.widget.ConstraintLayout>